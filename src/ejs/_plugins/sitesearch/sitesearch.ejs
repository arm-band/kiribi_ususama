<%
parameters = {
    title: 'サイト内検索',
    entitle: 'Search',
    css: 'contents',
    js: 'app.min',
    description: 'サイト内検索ページです。',
    ogpimage: 'eyecatch.jpg'
};
-%>
<%- include('../../util/_initLoad') -%>
<%- include('../../util/_headset', { config, parameters }) -%>
<!DOCTYPE html>
<html lang="ja">
<head>
<%- include('../../partial/_head', { config, parameters, commonVar, metaTitle, metaDescription, metaOgpimage }) %>
</head>
<body data-offset="<%= navbarHeight %>" class="<%= id %>" id="<%= id %>">
<div id="wrapper">
<div class="l-upper">
<%- include('../../partial/_header', { config, commonVar }) %>
<%- include('../../partial/_eyecatch', { headerString }) %>
    <!-- main -->
    <main class="l-main m-0 p-0 <%= id %>main" id="listSearch">
        <div class="container">
            <aside>
<%- include('../../partial/_breadcrumb', { config, parameters, relPath }) %>
            </aside>
        </div>
        <div class="container">
            <section class="inputSearch pb-4">
                <div class="page-header mb-3 text-center <%= id %>_header">
                    <h2>サイト内検索<small class="ml-3">Search</small></h2>
                </div>
                <div class="<%= id %>_contents">
                    <div class="form-group">
                        <label for="inputSearch">サイト内検索</label>
                        <input type="search" class="form-control search" id="inputSearch" placeholder="検索">
                    </div>
                </div>
            </section>
        </div>
        <div class="container">
            <section class="pb-5">
                <h3><span id="hits" class="me-2">-</span>件</h3>
                <ul class="list">
                    <%- htmlList %>
                </ul>
            </section>
        </div>
        <div class="text-center pb-5">
            <a href="<%= relPath %>" class="btn btn-secondary"><i class="fa-solid fa-fw fa-chevron-left" aria-hidden="true"></i>トップページへ戻る</a>
        </div>
    </main>
    <!-- /main -->
</div>
<%- include('../../partial/_footer', { config, copyRightYear }) %>
</div>
<%- include('../../partial/_jsLoader', { parameters, relPath }) %>
</body>
</html>