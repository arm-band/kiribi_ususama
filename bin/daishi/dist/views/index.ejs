<%
parameters = {
    title: "初期設定",
    entitle: "Initial Settings",
    css: "index",
    js: "app.min"
};
%><%- include("./util/_init_load") %>
<!DOCTYPE html>
<html lang="ja">
<head>
<%- include("partial/_head", { config, parameters, commonVar }) %>
</head>
<body data-offset="<%= navbarHeight %>" class="<%= id %>" id="<%= id %>">

<div id="wrapper">
<%- include("partial/_header", { config }) %>

    <!-- main -->
    <main class="main <%= id %>main">
        <section class="container my-5">
            <form action="./finish" method="post">
                <div class="page-header mb-3 text-center init_header">
                    <h2>初期設定<small class="ml-3">Initial Settings</small></h2>
                </div>
                <div class="mb-4 init_contents fixed_anchor">
                    <h3 class="mt-4 mb-3">一般設定</h3>
                    <div class="form-group row">
                        <label for="siteName" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="Webサイトの名前です。"><i class="fas fa-fw fa-file-signature" aria-hidden="true"></i><%= labelList.config.siteName %><span class="badge badge-warning">必須</span></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="siteName" id="siteName" placeholder="<%= config.commons.sitename %>" value="<%= config.commons.sitename %>" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="Webサイトの説明・キャッチフレーズです。titleタグやmetaタグのdescriptionに使用します。"><i class="fas fa-fw fa-pen-fancy" aria-hidden="true"></i><%= labelList.config.description %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="description" id="description" placeholder="<%= config.commons.description %>" value="<%= config.commons.description %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="author" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="フッタのコピーライト表示の著者情報として表示します。"><i class="fas fa-fw fa-user" aria-hidden="true"></i><%= labelList.config.author %><span class="badge badge-warning">必須</span></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="author" id="author" placeholder="<%= config.commons.author %>" value="<%= config.commons.author %>" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="連絡先情報として扱う住所です。"><i class="fas fa-fw fa-map-marked-alt" aria-hidden="true"></i><%= labelList.config.address %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="address" id="address" placeholder="<%= config.commons.address %>" value="<%= config.commons.address %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="postalcode" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="連絡先情報として扱う郵便番号です。"><i class="fas fa-fw fa-map-marker-alt" aria-hidden="true"></i><%= labelList.config.postalcode %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="postalcode" id="postalcode" placeholder="<%= config.commons.postalcode %>" value="<%= config.commons.postalcode %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="tel" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="連絡先情報として扱う電話番号です。"><i class="fas fa-fw fa-phone" aria-hidden="true"></i><%= labelList.config.tel %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="tel" id="tel" placeholder="<%= config.commons.tel %>" value="<%= config.commons.tel %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="themeColor" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="Webサイトのイメージカラーです。"><i class="fas fa-fw fa-palette" aria-hidden="true"></i><%= labelList.commonVar.themeColor %></label>
                        <div class="col-md-10">
                            <input type="color" class="form-control" name="themeColor" id="themeColor" value="<%= commonVar["main-color"] %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CRYear" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="Webサイトの発行年数です。コピーライトの表示に使います。"><i class="fas fa-fw fa-calendar" aria-hidden="true"></i><%= labelList.config.CRYear %><span class="badge badge-warning">必須</span></label>
                        <div class="col-md-10">
                            <input type="number" class="form-control" size="4" name="CRYear" id="CRYear" placeholder="<%= config.commons.year %>" value="<%= config.commons.year %>" required="required">
                        </div>
                    </div>
                    <h3 class="mt-4 mb-3">OGP設定</h3>
                    <div class="form-group row">
                        <label for="OGPTUserID" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="OGPに設定するTwitterアカウントのユーザIDを入力してください。先頭に@は不要です。"><i class="fab fa-fw fa-twitter" aria-hidden="true"></i><%= labelList.config.OGPTUserID %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="OGPTUserID" id="OGPTUserID" placeholder="<%= config.param.ogp.twitteraccount %>" value="<%= config.param.ogp.twitteraccount %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="OGPImage" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="OGPに設定する画像のURLを指定してください。"><i class="fas fa-fw fa-image" aria-hidden="true"></i><%= labelList.config.OGPImage %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="OGPImage" id="OGPImage" placeholder="<%= config.param.ogp.ogpimage %>" value="<%= config.param.ogp.ogpimage %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="URL" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="OGPに設定するWebサイトのURLを指定してください。"><i class="fas fa-fw fa-link" aria-hidden="true"></i><%= labelList.config.URL %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="URL" id="URL" placeholder="<%= config.commons.url %>" value="<%= config.commons.url %>">
                        </div>
                    </div>
                    <h3 class="mt-4 mb-3">Ususama設定</h3>
<%
let checkedUsephp = '';
if(plugins.usephp == true) {
    checkedUsephp = ' checked="checked"';
}
%>
                    <div class="form-group row">
                        <label for="usephp" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="XAMPPのPHPを使用するかどうかを設定します。"><i class="fab fa-fw fa-php" aria-hidden="true"></i><%= labelList.plugins.usephp %></label>
                        <div class="col-md-10">
                            <label class="form-check-label" for="usephp">
                                <input class="form-check-input usephp" type="checkbox" name="usephp" id="usephp" value="true"<%- checkedUsephp %> data-toggle="toggle" data-on="する" data-off="しない">
                            </label>
                        </div>
                    </div>
<%
let checkedNews = '';
if(plugins.news == true) {
    checkedNews = ' checked="checked"';
}
%>
                    <div class="form-group row">
                        <label for="news" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="新着情報の一覧と各記事ページを生成するかどうかを設定します。"><i class="fas fa-fw fa-newspaper" aria-hidden="true"></i><%= labelList.plugins.news %></label>
                        <div class="col-md-10">
                            <label class="form-check-label" for="news">
                                <input class="form-check-input news" type="checkbox" name="news" id="news" value="true"<%- checkedNews %> data-toggle="toggle" data-on="する" data-off="しない">
                            </label>
                        </div>
                    </div>
<%
let checkedSSL = '';
if(plugins.ssl == true) {
    checkedSSL = ' checked="checked"';
}
%>
                    <div class="form-group row">
                        <label for="news" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="browsersyncでブラウザを起動する際にSSLを使用するかどうかを設定します(別途開発環境でのSSL証明書の設定が必要です)。"><i class="fas fa-fw fa-lock" aria-hidden="true"></i><%= labelList.plugins.ssl %></label>
                        <div class="col-md-10">
                            <label class="form-check-label" for="ssl">
                                <input class="form-check-input ssl" type="checkbox" name="ssl" id="ssl" value="true"<%- checkedSSL %> data-toggle="toggle" data-on="する" data-off="しない">
                            </label>
                        </div>
                    </div>
                    <h3 class="mt-4 mb-3">FTP情報</h3>
                    <div class="form-group row">
                        <label for="ftpUser" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="FTPに使用するユーザIDを指定します。"><i class="fas fa-fw fa-user" aria-hidden="true"></i><%= labelList.ftpConfig.user %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="ftpUser" id="ftpUser" placeholder="<%= ftpConfig.user %>" value="<%= ftpConfig.user %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ftpPswd" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="FTPに使用するパスワードを指定します。"><i class="fas fa-fw fa-key" aria-hidden="true"></i><%= labelList.ftpConfig.password %></label>
                        <div class="col-md-10">
                            <input type="password" class="form-control" name="ftpPswd" id="ftpPswd" value="<%= ftpConfig.password %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ftpHost" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="FTPで接続するサーバのホスト名を入力してください。"><i class="fas fa-fw fa-server" aria-hidden="true"></i><%= labelList.ftpConfig.host %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="ftpHost" id="ftpHost" placeholder="<%= ftpConfig.host %>" value="<%= ftpConfig.host %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ftpLocal" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="アップロードするファイルがある場所を指定してください。"><i class="fas fa-fw fa-hdd" aria-hidden="true"></i><%= labelList.ftpConfig.localRoot %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="ftpLocal" id="ftpLocal" placeholder="<%= ftpConfig.localRoot %>" value="<%= ftpConfig.localRoot %>">
                            <small class="form-text text-muted">通常は変更する必要はありません。</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ftpRemote" class="col-md-2 col-form-label" data-toggle="tooltip" title="" data-original-title="サーバ上のアップロードする場所を指定してください。"><i class="fas fa-fw fa-folder-open" aria-hidden="true"></i><%= labelList.ftpConfig.remoteRoot %></label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="ftpRemote" id="ftpRemote" placeholder="<%= ftpConfig.remoteRoot %>" value="<%= ftpConfig.remoteRoot %>">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-fw fa-paper-plane" aria-hidden="true"></i>送信する</button>
                </div>
            </form>
        </section>
    </main>
    <!-- /main -->

<%- include("partial/_footer", { config, copyRightYear }) %>

</div>

<%- include("partial/_js_loader", { parameters }) %>
</body>
</html>